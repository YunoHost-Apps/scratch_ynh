{
    "name": "Scratch",
    "id": "scratch",
    "packaging_format": 1,
    "description": {
        "en": "Scratch package for YunoHost.",
        "fr": "Scratch pour YunoHost."
    },
    "version": "3.0~ynh1",
    "url": "https://scratch.mit.edu/",
    "upstream": {
        "license": "non-free",
        "website": "https://scratch.mit.edu/",
        "demo": "https://demo.example.com",
        "admindoc": "https://fr.scratch-wiki.info/wiki/Scratch_3.0",
        "code": "https://some.forge.com/example/example"
    },
    "license": "non-free",
    "maintainer": {
        "name": "liberodark",
        "email": "liberodark@gmail.com"
    },
    "requirements": {
        "yunohost": ">= 4.2.4"
    },
    "multi_instance": true,
    "services": [
        "nginx",
    ],
    "arguments": {
        "install": [{
                "name": "domain",
                "type": "domain",
                "example": "example.com"
            },

            {
                "name": "path",
                "type": "path",
                "example": "/scratch",
                "default": "/scratch"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "default": true
            }
        ]
    }
}
