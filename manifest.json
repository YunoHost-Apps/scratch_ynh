{
    "name": "Scratch",
    "id": "scratch",
    "packaging_format": 1,
    "description": {
        "en": "Scratch package for YunoHost.",
        "fr": "Scratch pour YunoHost."
    },
    "version": "3.0-Beta",
    "url": "https://scratch.mit.edu/",
    "license": "free",
    "maintainer": {
        "name": "liberodark",
        "email": "liberodark@gmail.com"
    },
    "requirements": {
        "yunohost": ">= 2.7.2"
    },
    "multi_instance": true,
    "services": [
        "nginx",
        "php5-fpm",
        "mysql"
    ],
    "arguments": {
        "install": [{
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain name for Scratch",
                    "fr": "Choisissez un nom de domaine pour Scratch"
                },
                "example": "example.com"
            },

            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for Scratch /scratch is accepted",
                    "fr": "Choisissez un chemin pour Scratch /scratch est accept√©"
                },
                "example": "/scratch",
                "default": "/scratch"
            },
            
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public site ?",
                    "fr": "Est-ce un site public ?"
                },
                "default": "true"
            }
        ]
    }
}
